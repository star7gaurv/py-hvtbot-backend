# HarvestBot Environment Configuration
# Copy this file to .env and fill in your values

# API Server Configuration
API_HOST=localhost
API_PORT=5001
API_DEBUG=true

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# Database
DATABASE_PATH=data/harvestbot_users.db

# LBank API Configuration
LBANK_API_BASE_URL=https://api.lbank.info
LBANK_API_PORT=443

# Bot Configuration
DEFAULT_MIN_TIME=30
DEFAULT_MAX_TIME=120
DEFAULT_WALLET_PERCENTAGE=10
DEFAULT_MIN_SPREAD=0001
DEFAULT_MAX_SPREAD=00050

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/harvestbot.log

# Monitoring
MONITOR_INTERVAL=60
ENABLE_ACTIVITY_LOGGING=true
ACCESS_TOKEN_EXPIRE_HOURS=24

# Database Configuration
DB_PATH=harvestbot_users.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=5001
API_DEBUG=True

# Frontend Configuration
FRONTEND_URL=http://localhost:3017

# Security
ALLOWED_HOSTS=localhost,127.0.0.1

# LBank API Configuration (for future use)
LBANK_API_TIMEOUT=30
LBANK_MAX_RETRIES=3
